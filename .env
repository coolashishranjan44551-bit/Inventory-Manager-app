# Domain & TLS
DOMAIN=app.example.com
EMAIL=admin@example.com

# Docker image naming
IMAGE_NAME=ghcr.io/your-org/inventory-manager-app
IMAGE_TAG=latest

# Supabase credentials
NEXT_PUBLIC_SUPABASE_URL=https://your-supabase-url.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=public-anon-key
SUPABASE_REST_URL=https://your-supabase-url.supabase.co
SUPABASE_SERVICE_ROLE_KEY=service-role-secret
SUPABASE_PROJECT_REF=your-project-ref
SUPABASE_ACCESS_TOKEN=your-supabase-access-token
DATABASE_URL=postgresql://postgres:postgrespassword@db.supabase.co:5432/postgres
SUPABASE_JWT_SECRET=your-supabase-jwt-secret

# Application config
NEXT_PUBLIC_APP_URL=https://app.example.com
RAZORPAY_KEY_ID=rzp_test_XXXX
RAZORPAY_KEY_SECRET=rzp_test_secret
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/...

# Backup schedule (cron syntax, UTC)
BACKUP_SCHEDULE=0 3 * * *
